<div class="container-fluid base_bg">
  <div class="container main">
    <div class="user_new_wrapper">

      <div class="user_show_content">
        <% if current_user.admin? %>
          <h1 class="admin_index_h1">ユーザー詳細（管理画面）</h1>
        <% else %>
          <h1>ユーザー詳細</h1>
        <% end %>
        <table class="user_show_table">
          <tr>
            <th><%= t('activerecord.attributes.user.name') %></th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th><%= t('activerecord.attributes.user.email') %></th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th><%= t('activerecord.attributes.user.created_at') %></th>
            <td><%= l @user.created_at %></td>
          </tr>
        </table>
          <% if current_user.admin? %>
            <%= link_to "編集", edit_admin_user_path(@user.id), class: "btn btn-primary admin_new_btn" %>
            <div class="show_btns">
              <%= link_to t('buttons.back'), admin_users_path %>
            </div>
          <% else %>
            <div class="show_btns">
              <%= link_to t('buttons.back'), tasks_path %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
