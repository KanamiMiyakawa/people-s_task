<div class="container-fluid base_bg">
  <div class="container main">
    <div class="new_main_wrapper">
      <div class="session_new_content">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>

        <h1>ログイン</h1>
        <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

          <table class="session_table">
            <tr>
              <th><%= f.label :email, t('activerecord.attributes.user.email') %></th>
              <td><%= f.email_field :email %></td>
            </tr>
            <tr>
              <th><%= f.label :password, t('activerecord.attributes.user.password') %></th>
              <td><%= f.password_field :password %></td>
            </tr>
          </table>

          <div class="login_button">
            <%= f.submit "ログイン", class: "new_submit_btn btn btn-primary new_btn" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
