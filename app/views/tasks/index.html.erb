<p id="notice"><%= notice %></p>

<h1><%= t('titles.task_title_index') %></h1>

<%= link_to "終了期限でソートする", tasks_path(sort_limit: "true"), id: "sort_limit_button" %>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.task.task_name') %></th>
      <th><%= t('activerecord.attributes.task.content') %></th>
      <th><%= t('activerecord.attributes.task.priority') %></th>
      <th><%= t('activerecord.attributes.task.limit') %></th>
      <th><%= t('activerecord.attributes.task.status') %></th>
      <th><%= t('activerecord.attributes.task.created_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="task_tbody">
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.content %></td>
        <td><%= task.priority %></td>
        <td class="task_limit"><%= task.limit %></td>
        <td><%= task.status %></td>
        <td class="task_created_at"><%= task.created_at %></td>
        <td><%= link_to t('buttons.task_show'), task %></td>
        <td><%= link_to t('buttons.task_edit'), edit_task_path(task) %></td>
        <td><%= link_to t('buttons.task_delete'), task, method: :delete, data: { confirm: t('confirm.when_delete') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.task_new'), new_task_path %>
